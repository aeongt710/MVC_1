@model IEnumerable<MVC_1.Models.Item>

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Item List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create New Item</a>
        </div>
    </div>
    <hr />
    <table class="table table-bordered table-striped">
        <thread>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Borrower</th>
                <th>Lender</th>
            <tr />
        </thread>
        @foreach(var item in Model){

        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Borrower</td>
            <td>@item.Lender</td>
        </tr >

        }


    </table>

</div>