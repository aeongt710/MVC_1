@model MVC_1.Models.Expense

<form asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Amount"></label>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <input asp-for="Name" class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input asp-for="Amount"  class="form-control"/>
                    </div>
                </div>

                <div class="form-group row  pt-3">
                    <div class="col-12 row offset-2" >
                        <div class="col">
                            <input type="submit" class="btn btn-primary w-75" value="Save"/>
                        </div>
                        <div class="col">
                            <a asp-controller="Expense" asp-action="Index" class="btn btn-danger">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

