@model IEnumerable<MVC_1.Models.Expense>

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Add New Expense</a>
        </div>
    </div>
    <hr />
    <table class="table table-bordered table-striped">
        <thread>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Borrower</th>
                <th>Operation</th>
            <tr />
        </thread>
        @foreach(var item in Model){

        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Amount</td>
            <td><a asp-action="Update" asp-route-id="@item.Id" asp-controller="Expense" >Update</a></td>
        </tr >

        }


    </table>

</div>