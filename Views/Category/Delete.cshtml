@model MVC_1.Models.Category

<form asp-action="Delete">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="row form-group">
                    <div class="col-4" hidden>
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4" hidden>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Name" disabled class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row  pt-3">
                    <div class="col-12 row offset-2">
                        <div class="col">
                            <input type="submit" class="btn btn-primary w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-danger">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
<partial name="_ValidationScriptsPartial" />
}